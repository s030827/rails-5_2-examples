<p id="notice"><%= notice %></p>

<nav class="navbar navbar-default">
	<a class="navbar-brand" href="#">All Movies</a>
  <div class="container">
    <%= form_tag movies_path, class: 'navbar-form navbar-left', role: 'search', method: :get do |f| %>
      <div class="form-group">
        <%= text_field_tag :q, params[:query], class: 'form-control' %>
      </div>
      <%= button_tag "Search", class: 'btn btn-default', name: nil %>
    <% end %>
    <div class="container">
    	<div class="navbar-form">
	      <%= link_to 'New Movie', new_movie_path, class: 'btn btn-info navbar-right' %>
    	</div>
    </div>

  </div>
</nav>

<%= @movies.each do |movie| %>
	<%= render 'movie', movie: movie %>
<% end %>

